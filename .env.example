# ==============================================
# Cyber-Jianghu Environment Configuration
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ==============================================
# Required Configuration
# ==============================================

# ZhipuAI API Key (Required)
# Get from: https://open.bigmodel.cn/
ZHIPUAI_API_KEY=your_zhipuai_api_key_here

# ==============================================
# Optional Service URLs
# ==============================================

# ComfyUI URL (Defaults to Docker service)
# Docker: http://comfyui:8188
# Local: http://localhost:8188
COMFYUI_URL=http://comfyui:8188

# Qdrant Vector Database URL
# Docker: http://qdrant:6333
# Local: http://localhost:6333
QDRANT_URL=http://qdrant:6333

# Redis Cache URL (Optional, for production)
# Docker: redis://redis:6379/0
# Local: localhost:6379
REDIS_URL=redis://redis:6379/0

# ==============================================
# Server Configuration
# ==============================================

# Server Port
SERVER_PORT=8080

# Server Host (0.0.0.0 for all interfaces)
SERVER_HOST=0.0.0.0

# Environment (development, staging, production)
ENVIRONMENT=development

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# ==============================================
# AI Model Configuration
# ==============================================

# GLM-5 Chat Model
GLM_CHAT_MODEL=glm-4

# GLM-5 Embedding Model
GLM_EMBEDDING_MODEL=embedding-3

# Max Tokens for Story Generation
MAX_TOKENS=1000

# Temperature for Story Generation (0.0-1.0)
TEMPERATURE=0.7

# ==============================================
# Cache Configuration
# ==============================================

# Audio Cache Directory
AUDIO_CACHE_DIR=/data/audio_cache

# Image Cache Directory
IMAGE_CACHE_DIR=/data/image_cache

# Cache TTL (in hours)
AUDIO_CACHE_TTL=24
IMAGE_CACHE_TTL=168

# Max Cache Entries
AUDIO_CACHE_MAX_ENTRIES=500
IMAGE_CACHE_MAX_ENTRIES=200

# ==============================================
# Performance Configuration
# ==============================================

# Max Concurrent Image Generations
MAX_CONCURRENT_IMAGE_GEN=2

# Request Timeout (in seconds)
REQUEST_TIMEOUT=120

# ==============================================
# GPT-SoVITS Configuration
# ==============================================

# GPT-SoVITS Service URL
# Docker: http://gpt-sovits:9880
# Local: http://localhost:9880
GPTSOVITS_URL=http://gpt-sovits:9880

# Default Voice ID
DEFAULT_VOICE_ID=narrator

# Audio Sample Rate
AUDIO_SAMPLE_RATE=24000

# Audio Speed (0.5-2.0)
AUDIO_SPEED=1.0
